
<div class="container">
  <div class="content">
    <div class="cards">
      <% @articles.each do |article|  %>
      <div>
        <%= link_to articles_path, class: "card", style:"background-image: url(https://source.unsplash.com/featured/?#{article.title.split(" ").join("%20")})" do %>
          <h3><%= article.title %></h3>
          <p><%= article.content %></p>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
